<div class="container justify-content-center align-items-center">
    <div class="row">
        <div class="col-md-6 col-xl-6 offset-xl-3 offset-md-3 mt-5 ">
            <div class="card shadow">
                {{!-- <div class="card-header">
                    <h3>Ingreso de usuario</h3>
                </div> --}}
                <div class="card-body">
                    <h5 class="card-title text-center">Registrar profesor</h5>
                    <form novalidate class="needs-validation" action="/admin/crearTeacher" method="POST">
                        <div class="form-group mb-3">
                            <label for="exampleInputPassword1">Nombre completo</label>
                            <input type="text" name="teacher[name]" class="form-control" id="exampleInputPassword1"
                                placeholder="Nombre" required>
                            <div class="valid-feedback">
                                El nombre no puede quedar vacío
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label" for="exampleInputEmail1">Email</label>
                            <input type="email" name="teacher[email]" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Email"
                                pattern="^[A-Za-z0-9._%+-]+@estudiantec\.cr$" required autofocus>
                            <div class="invalid-feedback">
                                El email no puede quedar vacío
                            </div>
                        </div>                       
                        <br>
                        <div class="d-grid gap-2">
                            <span class="text-center">
                                <button class="btn btn-success btn-block">Crear</button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
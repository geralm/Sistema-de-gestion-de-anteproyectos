<div class="container justify-content-center align-items-center">
    <div class="row">
        <div class="col-md-6 col-xl-6 offset-xl-3 offset-md-3 ">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-center">Editar evento</h5>
                    <form action="/events/{{event.id}}/?_method=PUT" method="POST" novalidate
                        class="needs-validation form-group d-inline">
                        <div class="mb-3">
                            <label class="form-label" for="title">Titulo</label>
                            <input class="form-control" type="text" id="title" name="event[title]"
                                value="{{event.title}}" required>
                            <div class="invalid-feedback">Este campo no puede quedar vacío</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description </label>
                            <textarea required class="form-control" type="text" id="description"
                                name="event[description]">{{event.description}}</textarea>
                            <div class="invalid-feedback"> Este campo no puede quedar vacío </div>
                        </div>
                        <div class="mb-3">
                            <label for="startdate">Empieza</label>
                            <input id="startdate" class="form-control" type="datetime-local" name="event[startDate]"
                                value="{{event.startDate}}" required />
                            <div class="invalid-feedback">Este campo no puede quedar vacío</div>

                        </div>
                        <div class="mb-3">
                            <label for="finishdate">Termina</label>
                            <input id="finishdate" class="form-control" type="datetime-local" name="event[finishDate]"
                                value="{{event.finishDate}}" required />
                            <div class="invalid-feedback">Este campo no puede quedar vacío</div>
                        </div>
                        <button class="btn btn-warning btn-block">Salvar</button>
                    </form>
